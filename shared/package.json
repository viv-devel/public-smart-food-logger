{
  "name": "@smart-food-logger/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "source": "src/index.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean --dts-resolve --sourcemap",
    "dev": "tsup src/index.ts --format esm --dts --watch --dts-resolve",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
